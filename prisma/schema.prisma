// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  username   String
  password   String
  userType   UserType @relation(fields: [userTypeId], references: [id])
  userTypeId Int
}

model UserType {
  id          Int    @id @default(autoincrement())
  description String
  User        User[]
}

model City {
  id    String  @id @default(uuid())
  name  String
  title String
  text  String
  Place Place[]
}

model Place {
  id     String @id @default(uuid())
  name   String
  title  String
  text   String
  rate   Float
  city   City   @relation(fields: [cityId], references: [id])
  cityId String
}

model Comment {
  id      String @id @default(uuid())
  text    String
  like    Int
  deslike Int
}
